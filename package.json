{
  "name": "mynpmbox",
  "version": "1.0.25",
  "description": "A utility toolbox for modern JavaScript/TypeScript development",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./index.ts",
    "./@run": "./util/run.ts",
    "./@transform": "./util/run.ts",
    "./@enum": "./util/run.ts"
  },
  "scripts": {
    "build": "tsc --build",
    "start": "ts-node src/index.ts",
    "dev": "nodemon --watch src --exec \"ts-node src/index.ts\"",
    "restart": "npx kill-port 8000",
    "prestart": "npm run restart",
    "predev": "npm run restart",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "npm run build"
  },
  "author": "myworldbox",
  "license": "ISC",
  "keywords": [
    "typescript",
    "utilities",
    "toolbox"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/myworldbox/mynpmbox.git"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^22.9.3",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}